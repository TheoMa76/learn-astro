---
import GlobalLayout from "../layouts/GlobalLayout.astro";
import FormComponent from "../components/Form.tsx";
import GradienBorderText from "../components/GradienBorderText.astro";

const fields = [
  {
    name: "Nom",
    type: "text",
    required: true,
    minLength: 2,
    maxLength: 50,
    placeholder: "Votre nom",
  },
  {
    name: "Email",
    type: "email",
    required: true,
    placeholder: "votre@email.com",
  },
  {
    name: "Message",
    type: "text",
    required: true,
    minLength: 10,
    maxLength: 1000,
    placeholder: "Votre message",
  },
];


const handleSubmit = (data: Record<string, string>) => {
  console.log("Formulaire soumis :", data);

};
---

<GlobalLayout>
	<div slot="content" class="space-y-16 px-6 md:px-12 py-12">
    <section class="text-center space-y-6">
      <h1 class="text-4xl font-bold text-[color:var(--color-primary)]">      
        Contactez-nous
      </h1>

    <GradienBorderText 
      text="Nous nous efforçons de répondre à toutes les demandes dans les plus brefs délais. Notre équipe s’engage à vous apporter une réponse personnalisée, généralement sous 24 à 48 heures. Merci de votre confiance et de votre patience !" 
    />
    </section>

    <FormComponent
      fields={fields}
      submitText="Envoyer le message"
      client:visible
    />
  </div>
</GlobalLayout>